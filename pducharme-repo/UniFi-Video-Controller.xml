<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>False</Beta>
  <Category>HomeAutomation: Network:Management</Category>
  <Name>UniFi-Video</Name>
  <Description>Unifi Video Controller (NVR) is a NVR software from the company Ubiquiti Networks to use with their UniFi Video IP Cameras.  To use the latest BETA version, add a :beta in the Repository field in Advanced view.</Description>
  <Registry>https://registry.hub.docker.com/u/pducharme/unifi-video-controller/</Registry>
  <Repository>pducharme/unifi-video-controller</Repository>
  <BindTime>true</BindTime>
  <Privileged>true</Privileged>
  <Environment/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>1935</HostPort>
        <ContainerPort>1935</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>6666</HostPort>
        <ContainerPort>6666</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7004</HostPort>
        <ContainerPort>7004</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>7080</HostPort>
        <ContainerPort>7080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7442</HostPort>
        <ContainerPort>7442</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7443</HostPort>
        <ContainerPort>7443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7444</HostPort>
        <ContainerPort>7444</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7445</HostPort>
        <ContainerPort>7445</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7446</HostPort>
        <ContainerPort>7446</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>      
      <Port>
        <HostPort>7447</HostPort>
        <ContainerPort>7447</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/unifi-video/</HostDir>
      <ContainerDir>/var/lib/unifi-video</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/UnfiVideoShareForStorage</HostDir>
      <ContainerDir>/var/lib/unifi-video/videos</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Version></Version>
  <WebUI>http://[IP]:[PORT:7080]/manage</WebUI>
  <Banner>http://i.imgur.com/dD9ub3n.png</Banner>
  <Icon>http://i.imgur.com/dD9ub3n.png</Icon>
</Container>

